@model WebApp.Models.Superheroes.Hero

<h1 class="text-center">Dodaj Nowego Bohatera</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Formularz Dodawania Superbohatera</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="SuperheroName">Imię Superbohatera</label>
                            <input type="text" id="SuperheroName" name="SuperheroName" class="form-control" placeholder="Wprowadź imię superbohatera" asp-for="SuperheroName">
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="FullName">Pełne Imię</label>
                            <input type="text" id="FullName" name="FullName" class="form-control" placeholder="Wprowadź pełne imię" asp-for="FullName">
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="Weight">Waga (kg)</label>
                            <input type="number" id="Weight" name="Weight" class="form-control" placeholder="Podaj wagę w kilogramach" asp-for="Weight">
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="Height">Wzrost (cm)</label>
                            <input type="number" id="Height" name="Height" class="form-control" placeholder="Podaj wzrost w centymetrach" asp-for="Height">
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="selectedSuperpowers">Supermoce</label>
                            <select id="selectedSuperpowers" name="selectedSuperpowers[]" class="form-control" multiple required>
                                @if (ViewBag.Superpowers != null)
                                {
                                    var superpowers = ViewBag.Superpowers as List<WebApp.Models.Superheroes.Superpower>;
                                    if (superpowers != null && superpowers.Any())
                                    {
                                        foreach (var superpower in superpowers)
                                        {
                                            <option value="@superpower.Id">@superpower.Name</option>
                                        }
                                    }
                                    else
                                    {
                                        <option disabled>Brak dostępnych supermocy</option>
                                    }
                                }
                                else
                                {
                                    <option disabled>Brak dostępnych supermocy</option>
                                }
                            </select>
                            <small class="form-text text-muted">Przytrzymaj CTRL, aby wybrać wiele supermocy.</small>
                        </div>
                        
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success me-2">Dodaj Bohatera</button>
                            <a asp-action="Index" class="btn btn-secondary">Powrót</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
